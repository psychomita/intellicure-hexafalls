generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model User {
  id            String   @id @map("_id")
  email         String   @unique
  name          String?
  role          Role     @default(PATIENT)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  specilization String?  @default("")
  phone         String?  @default("")

  emailVerified Boolean
  image         String?
  sessions      Session[]
  accounts      Account[]

  // Appointment relations
  doctorAppointments  Appointment[] @relation("DoctorAppointments")
  patientAppointments Appointment[] @relation("PatientAppointments")

  // Test results
  testResults TestResult[]
  textReports TextReport[]

  @@map("users")
}

model Appointment {
  id          String            @id @default(cuid()) @map("_id")
  patientId   String
  doctorId    String
  scheduledAt DateTime
  status      AppointmentStatus @default(PENDING)
  notes       String?

  patient User @relation("PatientAppointments", fields: [patientId], references: [id], onDelete: Cascade)
  doctor  User @relation("DoctorAppointments", fields: [doctorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("appointments")
}

model TestResult {
  id         String   @id @map("_id") @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  testType   TestType
  fileUrl    String
  fileName   String
  prediction String
  confidence Float
  fullReport String
  createdAt  DateTime @default(now())
}

model TextReport {
  id         String    @id @map("_id") @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  inputType  InputType
  prediction String
  confidence Float?
  fullReport String
  fileName   String?
  fileUrl    String?
  createdAt  DateTime  @default(now())
}

enum TestType {
  ALZHEIMERS
  PNEUMONIA
  BRAIN_TUMOR
}

enum InputType {
  LAB_REPORT
  PRESCRIPTION
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
